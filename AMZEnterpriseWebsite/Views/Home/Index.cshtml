@{
    ViewData["Title"] = "صفحه اصلی";
}

@section Scripts
{
    <script>
        Website.TextReduce(".blog-card-body-text", 50);
        Website.WaterEffect("#slider-area  .slider-wrapper");

        var app = document.getElementById('slider-subtitle');

        var typewriter = new Typewriter(app, {
            loop: true,
            delay: 75
        });

        typewriter
            .pauseFor(2000)
            .typeString('برنامه نویس')
            .pauseFor(2000)
            .deleteAll()
            .typeString('طراح و توسعه دهنده')
            .pauseFor(2000)
            .deleteAll()
            .typeString('مهندس نرم افزار')
            .pauseFor(2000)
            .deleteAll()
            .typeString('مشاور و برنامه نویس ارشد')
            .pauseFor(2000)
            .deleteAll()
            .typeString('نویسنده و پادکستر')
            .pauseFor(2000)
            .deleteAll()
            .start();
    </script>
}


<!-- Top Slider Start -->
<section id="slider-area">
    <div class="slider-wrapper">
        <div class="overlay">
            <p class="title">وبسایت شخصی علی مومن زاده</p>

            <p class="subtitle" id="slider-subtitle">
                <span>برنامه نویس</span>
                ,
                <span>مشاور</span>
                ,
                <span>مدرس</span>
            </p>
        </div>
    </div>
</section>
<!-- Top Slider End -->
<!-- Description Start -->
<section id="descritpion-area">
    <div class="container-fluid p-0">
        <div class="row no-gutters">

            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-1 order-md-1 order-sm-1 order-1 m-0">
                <div class="parallax-card">
                    <h2 class="parallax-card-title">طراحی وبسایت</h2>
                    <p class="parallax-card-content text-justify p-5" data-aos="zoom-in-up">
                        اینجا میتونی انواع وبسایت های شرکتی ، تجاری ، شخصی ، فروشگاهی و ... را با بهترین کیفیت و مناسب ترین قیمت سفارش بدی !
                        پایین تر میتونی تعدادی از نمونه کارهای من در این زمینه را ببینی ! تمامی این وبسایت ها با آخرین تکنولوژی های موجود طراحی و توسعه پیدا کرده اند و کاملا واکنش گرا می باشند و در انواع صفحه های نمایش به خوبی نمایش داده می شوند.
                    </p>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-2 order-md-2 order-sm-2 order-2">
                <div class="parallax parallax1 jarallax"></div>
            </div>


            <div class="col-lg-12 col-md-12 col-sm-12 col-12 order-lg-3 order-md-4 order-sm-4 order-4">
                <div class="parallax parallax2 jarallax"></div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 order-lg-4 order-md-3 order-sm-3 order-3">
                <div class="parallax-card">
                    <h3 class="parallax-card-title">توسعه نرم افزار های اتوماسیون ، اداری و حسابداری</h3>
                    <p class="parallax-card-content text-justify p-5" data-aos="zoom-in-up">
                        سیستم های حسابداری و اتوماسیون اداری و هوشمند سازی کسب کار یکی از مهمترین مسائل هر کسب و کار موفق است. به منظور انجام این هدف مهم من میتوانم انواع این سیستم ها را مطابق با اهداف شما طراحی کنم !

                    </p>
                    <a href="https://www.xant.ir" class="btn btn-block btn-primary py-5" data-aos="fade-up" target="_blank">همین الان در ژانت سفارش بده !</a>
                </div>
            </div>


            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-5 order-md-5 order-sm-5 order-5">
                <div class="parallax-card">
                    <h5 class="parallax-card-title">آموزش توسعه نرم افزار</h5>
                    <p class="parallax-card-content text-justify p-5" data-aos="zoom-in-up">
                        اطلاعات کامل نرم افزار ها و وبسایت ها کدنویسی شده توسط من به طور دقیق و منظم در اختیار شما سفارش دهنده گرامی قرار میگیره!
                        همچنین دانشجویان گرامی که نیاز به یادگیری برنامه نویسی ، توسعه نرم افزار یا یادگیری نرم افزار های خاص دارند می توانند به بنده اطلاع دهند تا در اولین فرصت این موارد را به ایشان منتقل کنم.
                    </p>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-6 order-md-6 order-sm-6 order-6">
                <div class="parallax parallax3 jarallax"></div>
            </div>

        </div>
    </div>
</section>
<!-- Description End -->

