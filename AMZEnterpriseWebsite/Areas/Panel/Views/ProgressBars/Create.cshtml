@model AMZEnterpriseWebsite.Areas.Panel.Models.ViewModels.ProgressBarFormViewModel

@{
    Layout = "_FormLayout";
    ViewData["Title"] = "ایجاد نوار پیشرفت";
}

<form asp-action="Create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Topic"></label>
        <input asp-for="Topic" class="form-control" />
        <span asp-validation-for="Topic"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input asp-for="Percentage" class="form-control" />
        <span asp-validation-for="Percentage"></span>
    </div>

    <div class="form-group">
        <button class="btn btn-success float-left" type="submit">ایجاد</button>
        <a asp-action="Index" class="btn btn-danger float-right">بازگشت</a>
    </div>
</form>